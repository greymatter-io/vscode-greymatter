{
  "name": "greymatter",
  "displayName": "Grey Matter",
  "description": "Grey Matter VSCode Extension for template driven configuration of the service mesh",
  "version": "0.0.2",
  "publisher": "greymatter",
  "icon": "assets/ext-icon.png",
  "repository": "https://github.com/greymatter-io/vscode-greymatter",
  "engines": {
    "vscode": "^1.48.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.greymatter.generate"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.greymatter.generate",
        "title": "Generate Grey Matter Configurations"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.greymatter.generate",
          "group": "greymatter",
          "when": "explorerResourceIsFolder"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "package": "./.circleci/version.sh && mkdir build && vsce package greymatter -o ./build/greymatter-$npm_package_version.vsix",
    "compile": "tsc -p ./",
    "publish-marketplace": "vsce publish --pat $VSCODE_PAT",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.48.0",
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "eslint": "^6.8.0",
    "@typescript-eslint/parser": "^2.30.0",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "glob": "^7.1.6",
    "mocha": "^7.1.2",
    "typescript": "^3.8.3",
    "vscode-test": "^1.3.0",
    "vsce": "^1.81.1"
  }
}
